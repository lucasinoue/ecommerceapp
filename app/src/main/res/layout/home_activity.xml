<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/LVProdutos"
        android:layout_width="match_parent"
        android:layout_height="268dp" />

    <Button
        android:id="@+id/btnNovoProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Novo Produto" />

    <Button
        android:id="@+id/btnNovoFornecedor"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="Novo Fornecedor" />

    <Button
        android:id="@+id/btnNovoCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Novo Cliente" />

    <Button
        android:id="@+id/btnViewPdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VEr PDF" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edtCadRasaoSocial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:hint="RasÃ£o Social"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edtCadResponsavel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="Responsavel"
        android:inputType="textPersonName"
        android:layout_below="@+id/edtCadRasaoSocial"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/edtCadCNPJ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:ems="10"
        android:hint="CNPJ"
        android:inputType="textPersonName"
        android:layout_below="@+id/edtCadResponsavel"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnCad_fornecedor_confirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtCadCNPJ"
        android:layout_marginStart="60dp"
        android:layout_marginTop="23dp"
        android:text="Confirmar" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnCad_fornecedor_confirmar"
        android:layout_marginStart="54dp"
        android:layout_toEndOf="@+id/btnCad_fornecedor_confirmar"
        android:text="Cancelar" />
</RelativeLayout>